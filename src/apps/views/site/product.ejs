<!DOCTYPE html>
<html>
  <head>
    <%- include("layout/head", {title: product.prd_name}) %>
    <link rel="stylesheet" href="css/product.css" />
  </head>

  <body>
    <!--	Header	-->
    <%- include("layout/header") %>
    <!--	End Header	-->

    <!--	Body	-->
    <div id="body">
      <div class="container">
        <div class="row">
          <%- include("layout/menu") %>
        </div>
        <div class="row">
          <div id="main" class="col-lg-8 col-md-12 col-sm-12">
            <!--	Slider	-->
            <div id="slide" class="carousel slide" data-ride="carousel">
              <!-- Indicators -->
              <%- include("layout/slider") %>
            </div>
            <!--	End Slider	-->

            <!-- Main content -->
            <!--	List Product	-->
            <div id="product">
              <div id="product-head" class="row">
                <div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                  <img src="/assets/images/products/<%= product.prd_image %>" />
                </div>
                <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                  <h1><%= product.prd_name %></h1>
                  <ul>
                    <% if (product.prd_warranty) { %>
                    <li><span>Bảo hành:</span> <%= product.prd_warranty %></li>
                    <% } %> <% if (product.prd_accessories) { %>
                    <li><span>Đi kèm:</span> <%= product.prd_accessories %></li>
                    <% } %> <% if (product.prd_new) { %>
                    <li><span>Tình trạng:</span> <%= product.prd_new %></li>
                    <% } %> <% if (product.prd_promotion) { %>
                    <li>
                      <span>Khuyến Mại:</span> <%= product.prd_promotion %>
                    </li>
                    <% } %>

                    <li id="price">Giá Bán (chưa bao gồm VAT)</li>
                    <li id="price-number"><%= product.prd_price %>đ</li>
                    <li id="status">
                      <% if (product.prd_status === 1) { %>
                      <span class="badge badge-success">Còn hàng</span>
                      <% } else { %>
                      <span class="badge badge-danger">Hết hàng</span>
                      <% } %>
                    </li>
                  </ul>
                  <div id="add-cart"><a href="#">Mua ngay</a></div>
                </div>
              </div>
              <div id="product-body" class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <h3>Đánh giá về <%= product.prd_name %></h3>
                  <%= product.prd_details %>
                </div>
              </div>

              <!--	Comment	-->
              <div id="comment" class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                  <h3>Bình luận sản phẩm</h3>
                  <form method="post">
                    <div class="form-group">
                      <label>Tên:</label>
                      <input
                        name="comm_name"
                        required
                        type="text"
                        class="form-control"
                      />
                    </div>
                    <div class="form-group">
                      <label>Email:</label>
                      <input
                        name="comm_mail"
                        required
                        type="email"
                        class="form-control"
                        id="pwd"
                      />
                    </div>
                    <div class="form-group">
                      <label>Nội dung:</label>
                      <textarea
                        name="comm_details"
                        required
                        rows="8"
                        class="form-control"
                      ></textarea>
                    </div>
                    <button type="submit" name="sbm" class="btn btn-primary">
                      Gửi
                    </button>
                  </form>
                </div>
              </div>
